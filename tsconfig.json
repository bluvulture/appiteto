{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": ".",
    "strict": false,
    "baseUrl": ".",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@/config/*": [
        "./src/config/*"
      ],
      "@/fixtures/*": [
        "./tests/fixtures/*"
      ],
      "@/integration/*": [
        "./tests/integration/*"
      ]
    }
  },
  "exclude": [
    "./node_modules/"
  ]
}
